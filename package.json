{
  "name": "@gentlyventures/bootloader",
  "version": "1.0.1",
  "description": "Modular scaffolding engine for Codex-based projects",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "jest": "^29.0.0",
    "pkg": "^5.8.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "boot": "tools/cli.js"
  },
  "scripts": {
    "build:core": "cd packages/core && npm run build",
    "test:core": "cd packages/core && npm test",
    "test:portia-adapter": "cd packages/portia-adapter && npm test",
    "test": "jest",
    "build:cli": "pkg . --out-path dist/cli",
    "publish:cli": "npm publish --access public"
  },
  "pkg": {
    "scripts": "tools/cli.js",
    "assets": [],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ]
  },
  "dependencies": {
    "yargs": "^18.0.0"
  }
}
